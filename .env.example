# AI Coding Mentor Environment Variables
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Optional: OpenAI Organization ID
# OPENAI_ORG_ID=your_org_id_here

# Optional: Model Configuration (default: gpt-4o-mini)
# OPENAI_MODEL=gpt-4o-mini
# OPENAI_MODEL=gpt-3.5-turbo
# OPENAI_MODEL=gpt-4o

# ChatAnywhere Configuration
# Set USE_CHATANYWHERE=true to enable ChatAnywhere support
# USE_CHATANYWHERE=false

# Base URL for OpenAI API (default: https://api.openai.com/v1)
# For ChatAnywhere, use one of these:
# OPENAI_BASE_URL=https://api.chatanywhere.tech/v1
# OPENAI_BASE_URL=https://api.chatanywhere.cn/v1
# OPENAI_BASE_URL=https://api.openai.com/v1

# Custom endpoint (if using a different provider)
# CUSTOM_OPENAI_ENDPOINT=your_custom_endpoint_here

# Application Configuration
# DEBUG=False
# LOG_LEVEL=INFO